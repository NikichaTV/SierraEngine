set(SIERRA_COMPILER_MSVC FALSE)
set(SIERRA_COMPILER_CLANG FALSE)
set(SIERRA_COMPILER_GCC FALSE)

set(SIERRA_COMPILER_UNKNOWN FALSE)

if(CMAKE_CXX_COMPILER_ID STREQUAL "MSVC")
    set(SIERRA_COMPILER_MSVC TRUE)
elseif(CMAKE_CXX_COMPILER_ID STREQUAL "Clang" OR CMAKE_CXX_COMPILER_ID STREQUAL "AppleClang")
    set(SIERRA_COMPILER_CLANG TRUE)
elseif(CMAKE_CXX_COMPILER_ID STREQUAL "GNU")
    set(SIERRA_COMPILER_GCC TRUE)
else()
    set(SIERRA_COMPILER_UNKNOWN TRUE)
endif()